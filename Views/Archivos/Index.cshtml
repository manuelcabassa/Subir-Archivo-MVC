<div class="container mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Name</td>
                <td>Fecha</td>
                <td>Archivo</td>
            </tr>



        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach (var file in Model)
                {
                    <tr>
                        <td>@file.Name</td>
                        <td>@file.Fecha</td>
                        <td>@file.File</td>

                    </tr>
                }
            }

        </tbody>
    </table>
</div>

